<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UbuntoColor"
    tools:context=".View.SplachScreenFragments.StartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ubuntulogo"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:background="@drawable/roundable_ubunto_sreen"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubunto Assistant"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:padding="20dp"
                android:fontFamily="sans-serif-thin"
                android:text="Hey there , this is a simple app for fixing your problems , so Let`s Start and Discover it together"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>